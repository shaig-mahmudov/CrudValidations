@model HomeVM

@{
    ViewData["Title"] = "Home Page";
}

    <main>

        <!-- SLIDER START -->

        <section id="slider">
            <div class="owl-carousel slider">
                @foreach (var item in Model.Sliders)
                 {
                  <div> <img src="~/img/@item.Image" alt=""> </div>
                 }

            </div>
            <div class="container context pl-lg-5 ml-lg-3">
                <div class="row">
                    <div class="col-lg-5">
                        <div class="text">
                            <h1>@Html.Raw(Model.SliderDetail.Head)</h1>
                            <h1>@Model.SliderDetail.Title</h1>
                            <p class="text-black-50 d-none d-sm-block">@Model.SliderDetail.Description</p>
                        </div>
                        <div class="img">
                            <img src="img/@Model.SliderDetail.Image" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- SLIDER END -->

        <!-- PRODUCTS START -->

        <section id="products">
            <div class="container">
                <div class="row pt-5">
                    <div class="col-12 d-flex justify-content-between">
                
                        <ul class="category-mobile d-md-none list-unstyled">
                            <li>
                                <a href="" class="categories mr-2">Categories</a>
                                <i class="fas fa-caret-down"></i>
                                <ul class="category list-unstyled" style="display: none;">
                                    <li><a href="" data-id="all">All</a></li>
                                    @foreach (var category in Model.Categories)
                                    {
                                        <li><a href="" data-id="@category.Name.ToLower()">@category.Name</a></li>
                                    }
                                </ul>
                            </li>
                        </ul>

                        <ul class="category d-none d-md-flex list-unstyled">
                            <li><a href="" data-id="all">All</a></li>
                            @foreach (var category in Model.Categories)
                            {
                                <li><a href="" data-id="@category.Name.ToLower()">@category.Name</a></li>
                            }
                        </ul>

                        <ul class="list-unstyled">
                            <li>
                                <a href="" class="mr-2">Filter</a>
                                <i class="fas fa-caret-down"></i>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="row load-products">
                    <input class="product-count" hidden value="@ViewBag.ProductCount" />
                    <partial name="_ProductPartial" model="Model.Products" />
                   
                </div>
<div class="d-flex justify-content-center my-5">
    <button class="btn btn-danger btn-load-more rounded-0 px-5">Load More</button>
</div>
            </div>
        </section>


        <!-- PRODUCTS END -->

        <!-- ABOUT START -->

        <section id="about">
            <div class="container py-5">
                <div class="row py-5">
                    <div class="col-lg-6">
                        <div class="img">
                            <img src="img/h3-video-img.jpg" class="img-fluid" alt="">
