@model IEnumerable<Product>

@foreach (var item in Model)
{
    var mainImage = item.ProductImages?.FirstOrDefault(m => m.IsMain)?.Image;

    <div class="col-sm-6 col-md-4 col-lg-3 mt-3 product">
        <div class="product-item text-center" data-id="@item.Category?.Name.ToLower()">
            <div class="img">
                <a href="">
                    @if (mainImage != null)
                    {
                        <img src="~/img/@mainImage" class="img-fluid" alt="@item.Name">
                    }
                    else
                    {
                        <img src="~/img/default-placeholder.png" class="img-fluid" alt="No Image">
                    }
                </a>
            </div>
            <div class="title mt-3">
                <h6>@item.Name</h6>
            </div>
            <div class="price">
                <span class="text-black-50">
                    <a class="btn btn-primary add-basket-btn" data-id="@item.Id">Add to cart</a>
                </span>
            </div>
        </div>
    </div>
}