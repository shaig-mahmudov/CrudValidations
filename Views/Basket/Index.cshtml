@model List<BasketDetailVM>

<div class="container my-5">

    @if (Model.Count == 0)
    {
        <div class="alert alert-warning text-center">
            Sebet bosdu.
            <br />
            <a asp-controller="Home" asp-action="Index" class="mt-3 btn btn-success">Alvere basla</a>
        </div>
    }
    else
    {
        <h3 class="mb-4">Sepetim</h3>
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Price</th>
                    <th scope="col">Count</th>
                    <th scope="col">Total</th>
                    <th scope="col">Settings</th>
                </tr>
            </thead>
            <tbody>
                @{
                    decimal grandTotal = 0;
                }

                @foreach (var item in Model)
                {
                    grandTotal += item.TotalPrice;
                    <tr>
                        <th>
                            @if (!string.IsNullOrEmpty(item.Image))
                            {
                                <img width="80" height="80" style="object-fit:cover" src="~/img/@item.Image" alt="@item.Name" />
                            }
                            else
                            {
                                <span>No Image</span>
                            }
                        </th>
                        <td>@item.Name</td>
                        <td>@item.Category</td>
                        <td>@item.Price ₼</td>
                        <td>@item.Count</td>
                        <td>@item.TotalPrice ₼</td>
                        <td>
                            <a asp-controller="Basket" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-flex justify-content-end">
            <h4>Genel Toplam: <span class="text-success">@grandTotal ₼</span></h4>
        </div>
    }
</div>