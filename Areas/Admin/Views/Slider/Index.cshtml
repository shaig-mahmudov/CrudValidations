@model IEnumerable<Slider>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Slider</h4>
            <button class="btn btn-success btn-rounded btn-fw">
                <i class="mdi mdi-library-plus"></i>
            </button>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="~/img/@item.Image" />
                                </td>
                                <td>
                                    <button class="btn btn-info btn-rounded btn-fw"><i class="mdi mdi-alert-circle-outline"></i></button>
                                    <button class="btn btn-primary btn-rounded btn-fw"><i class="mdi mdi-border-color"></i></button>
                                    <button class="btn btn-danger btn-rounded btn-fw"><i class="mdi mdi-delete"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>