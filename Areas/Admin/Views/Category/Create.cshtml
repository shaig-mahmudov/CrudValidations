@model Category

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Basic form elements</h4>
            <p class="card-description">
                Basic form elements
            </p>
            <form class="forms-sample" asp-action="Create" method="post">
                <div class="form-group">
                    <label for="exampleInputCity1">Category</label>
                    <input asp-for="Name" type="text" class="form-control" id="exampleInputCity1" placeholder="Name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-light" asp-action="Index">Back</button>
            </form>
        </div>
    </div>
</div>