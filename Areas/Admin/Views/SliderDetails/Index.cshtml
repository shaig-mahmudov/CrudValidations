@model IEnumerable<SliderDetail>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Slider Details List</h4>

            <button class="btn btn-success btn-rounded btn-fw">
                <i class="mdi mdi-library-plus"></i> Create New
            </button>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                Head
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img src="~/img/@item.Image" style="width: 100px; height: auto; border-radius: 0;" />
                                    </td>
                                    <td>
                                        @Html.Raw(item.Head)
                                    </td>
                                    <td>
                                        @item.Title
                                    </td>
                                    <td>
                                        <p style="max-width: 300px; overflow: hidden; white-space: nowrap; text-overflow: ellipsis;">
                                            @item.Description
                                        </p>
                                    </td>
                                    <td>
                                        <button class="btn btn-info btn-rounded btn-fw">
                                            <i class="mdi mdi-alert-circle-outline"></i>
                                        </button>
                                        <button class="btn btn-primary btn-rounded btn-fw">
                                            <i class="mdi mdi-border-color"></i>
                                        </button>
                                        <button class="btn btn-danger btn-rounded btn-fw">
                                            <i class="mdi mdi-delete"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center">Veri bulunamadı.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>